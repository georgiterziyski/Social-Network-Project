type User {
	id: ID!
	username : String!
	email    : String!
	password : String!
	firstName: String
	lastName : String
}

type Query {
    allUsers : [User]
    getUser(email: String) : User

}

input CreateUserInput {
	username : String!
	email	 : String!
	password : String!
	firstName: String
	lastName : String
}

type Mutation {
	createUser(	input : CreateUserInput!) : User
}

schema {
    query    : Query
    mutation : Mutation
}